<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Notifications="clr-namespace:MahApps.Metro.Controls.Notifications">
    
    <ControlTemplate TargetType="{x:Type Notifications:NotificationsWindow}"
                     x:Key="MetroNotificationsWindowTemplate">
        <Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <Grid Margin="10,10,50,10">
                <ContentPresenter Grid.Row="1"
                    Content="{TemplateBinding Body}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type Notifications:NotificationsWindow}">
        <Setter Property="Template"
                Value="{StaticResource MetroNotificationsWindowTemplate}" />
        <Setter Property="ShowInTaskbar"
                Value="False" />
        <Setter Property="ShowActivated"
                Value="True" />
        <Setter Property="ResizeMode"
                Value="NoResize" />
        <Setter Property="Background"
                Value="{DynamicResource AccentColorBrush}" />
        <Setter Property="Foreground"
                Value="{DynamicResource IdealForegroundBrush}" />
    </Style>
</ResourceDictionary>